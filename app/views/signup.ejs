<!DOCTYPE html>
<html>
<head>
	<!-- Use the 'title' property to render a page title  -->
	<title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />

</head>
<body>
    <script>
    function validateEmail(email)
    {
	    if (/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(email))
	    {
		    return (true);
	    }
        alert("Please enter a valid email address!");
	    document.getElementById("email").value="";
        return (false);
    }
    </script>
	
	<form action="/signup" method="post">
        <div class="outer_container">
            <!-- Use the 'title' property to render a title element  -->
            <h2 class="jumbotron text-center">  <%= title %></h2>
            
                <div class="container">
                    <label class="control-label">First Name:</label>
                    <input type="text" placeholder="Enter first name" class="form-control" name="firstName" required />
                    <span class="help-block"></span>
                </div>
                <div class="container">
                    <label class="control-label">LastName:</label>
                    <input type="text" placeholder="Enter last name" class="form-control" name="lastName" required />
                    <span class="help-block"></span>
                </div>
                <div class="container">
                    <label class="control-label">Address:</label>
                    <input type="text" placeholder="Enter address" class="form-control" name="address" required />
                    <span class="help-block"></span>
                </div>
                <div class="container">
                    <label class="control-label">Technical Skill:</label>
                    <input type="text" placeholder="Enter skillset" class="form-control" name="skill" required />
                    <span class="help-block"></span>
                </div>
                <div class="container">
                    <label class="control-label">Email:</label>
                    <input type="text" placeholder="Enter email(username)" class="form-control" name="email" id="email" onchange="validateEmail(this.value)" required />
                    <span class="help-block"></span>
                </div>
                <div class="container">
                    <label class="control-label">Password:</label>
                    <input type="password" placeholder="Enter password" class="form-control" name="password" required />
                    <span class="help-block"></span>
                </div>
                <div class="container">
                    <label class="control-label">Role:</label>
                    <input type="text" class="form-control" name="role" required />
                    <span class="help-block"></span>
                </div>
                      &nbsp;
                <div class="container">
                    <button type="submit" class="btn btn-success btn-block">Submit</button>
                </div>
            
        </div>
</form>




</body>
</html>